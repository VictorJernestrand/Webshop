@model RegisterUserModel

@{
    ViewData["Title"] = "Ny Kund";
}

<div class="mx-auto mt-5" style="max-width: 300px">
    <form asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FirstName" class="control-label">Förnamn</label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label">Efternamn</label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label">E-post</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="epost@adress.se" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label">Lösenord</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PasswordConfirm" class="control-label">Bekräfta lösenord</label>
            <input asp-for="PasswordConfirm" type="password" class="form-control" />
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Bli kund som fan!" class="btn btn-success" />
        </div>
        <p>Redan medlem? <a asp-action="LogIn">Logga in här</a></p>
    </form>
</div>

