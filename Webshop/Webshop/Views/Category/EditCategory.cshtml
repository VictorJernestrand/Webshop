@model Webshop.Models.EditCategoryModel

@{
    ViewData["Title"] = "Kategori";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href='@Url.Action("AllProducts", "Product")'>AllProducts</a></li>
        <li class="breadcrumb-item"><a href='@Url.Action("CreateProduct", "Product")'>Lägg till Ny Produkt</a></li>
        <li class="breadcrumb-item active" aria-current="page">Skapa NyKategori</li>
    </ol>
</nav>

@if (TempData["NewCategory"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["NewCategory"]
    </div>
}

@if (TempData["CategoryUpdate"] != null)
{
    <div class="alert alert-info" role="alert">
        @TempData["CategoryUpdate"]
    </div>
}

@if (TempData["DeletedCategory"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["DeletedCategory"]
    </div>
}

@if (TempData["DeletedCategoryFail"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["DeletedCategoryFail"]
    </div>
}

<span asp-validation-for="Name" class="text-danger" style="margin-left: 30px"></span>
<form asp-action="EditCategory" method="post" class="form-inline">

    @if (Model.Id > 0)
    {
        <div class="form-group mx-sm-3 mb-2" style="width: 300px">
            <input type="hidden" asp-for="Id" />
            <input type="text" asp-for="Name" class="form-control" id="newBrand" value="@Model.Name" style="width: 300px" />
        </div>
        <button type="submit" class="btn btn-warning mb-2 mr-2">Uppdatera</button> <span><a asp-action="EditCategory" asp-route-id="">(Skapa ny Kategori)</a></span>
    }
    else
    {
        <div class="form-group mx-sm-3 mb-2" style="width: 300px">
            <input type="text" asp-for="Name" class="form-control" id="newBrand" placeholder="Ny Kategori..." style=" width: 300px" />
        </div>
        <button type="submit" class="btn btn-success mb-2">Skapa Ny</button>
    }
</form>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Kategori</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.categoryCollection)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-action="EditCategory" asp-route-id="@category.Id">Uppdatera</a> |
                    <a asp-action="DeleteCategory" asp-route-id="@category.Id">Radera</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>

    <a href="#" onClick="history.go(-1); return false;">Tillbaka</a>
</div>