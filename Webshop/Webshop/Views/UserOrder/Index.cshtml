@{
}

@if (TempData["OrderEmpty"] != null)
{
    <div class="alert alert-warning" role="alert">
        @TempData["OrderEmpty"]
    </div>
}

<h3>Mina feta aktiva ordrar!</h3>

<table class="table table-borderless" style="border-collapse: separate; border-spacing: 0px 1px; background-color: rgba(255, 255, 255, 0.08); border-radius: 4px">
    <thead class="thead-dark rounded-top">
        <tr>
            <th scope="col">Datum</th>
            <th scope="col">Betalmetod</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody style="color:white">
        @foreach (var order in Model)
        {
            if (order.StatusId < 4)
            {
                <tr>
                    <td><a asp-action="OrderDetails" asp-route-id="@order.OrderId">@order.OrderDate</a> </td>
                    <td>@order.OrderPayment</td>
                    <td>@order.OrderStatus</td>
                </tr>
            }
        }
</table>

<h3>Mina feta levererade ordrar!</h3>
<table class="table table-borderless" style="border-collapse: separate; border-spacing: 0px 1px; background-color: rgba(255, 255, 255, 0.08); border-radius: 4px">
    <thead class="thead-dark rounded-top">
        <tr>
            <th scope="col">Datum</th>
            <th scope="col">Betalmetod</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody style="color:white">
        @foreach (var order in Model)
        {
            if (order.StatusId == 4)
            {
                <tr>
                    <td><a asp-action="OrderDetails" asp-route-id="@order.OrderId">@order.OrderDate</a> </td>
                    <td>@order.OrderPayment</td>
                    <td>@order.OrderStatus</td>
                </tr>

            }
        }
</table>