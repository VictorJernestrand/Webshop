@model Product

@{
    ViewData["Title"] = "Rock★Start - Ta Bort Produkt";
}

<h1>Ta bort produkt</h1>

<h3>Är du säker på att du vill ta bort denna produkt?</h3>
<div class="bg-deletetOrDetailsProduct">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content("~/Image/" + Model.Photo)" height="80" width="100" alt="Finns ingen bild än">
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brand.Name)
        </dd class>
    </dl>
    
    <form asp-action="DeleteProduct" method="post">
        <input type="hidden" asp-for="Id" />
        <br/>
        <br/>
        <input type="submit" value="Radera" class="btn btn-danger" />
        <p></p>
        <div class="form-group">
            <input type="submit" value="Tillbaka till alla produkter" class="btn btn-success"  asp-action="AllProducts" />

        </div>
    </form>
</div>
