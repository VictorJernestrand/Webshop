<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Webshop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/menu.css" />

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/17.0.0/classic/ckeditor.js"></script>

</head>
<body>
    <header>

        <div class="container">
            <div class="row" id="headertop">

                <div class="col-md-4 d-flex justify-content-center align-items-center text-white">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/Image/logo.png" id="logo" alt="RockStart logo" />
                    </a>
                </div>

                <form method="get" asp-controller="Search" asp-action="Index" class="col d-flex justify-content-center align-items-center">
                    <div class="input-group">
                        <input type="text" autofocus name="searchtext" class="form-control" placeholder="fan letar du efter?" aria-label="fan letar du efter?" aria-describedby="button-addon2" id="searcher" />
                        <div class="input-group-append">
                            <button class="btn btn-secondary" type="submit" id="button-addon2"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </form>

                <div class="col d-flex justify-content-center align-items-center text-white" id="cartcontent">
                    <div id="shoppingcart">

                        <div class="d-inline" id="cartitems">
                            <div>Varor: <span id="cartTotalItems"></span></div>
                            <div id="cartTotalCost"></div>
                        </div>

                        <div class="d-inline; d-flex align-items-center">
                            <div>
                                <a asp-action="Index" asp-controller="ShoppingCart" class="btn btn-success">Vagnen <i class="fas fa-cart-arrow-down"></i></a>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>

        <nav class="navbar navbar-expand-md navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">

                <span></span>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-hamburger"></i>
                </button>

                <div class="navbar-collapse collapse">

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-warehouse"></i> Hem</a>
                        </li>
                        <li class="nav-item dropdown">
                            @await Component.InvokeAsync("CategoryMenuList")
                        </li>
                        <li>
                            <a class="nav-link text-white" asp-area="" asp-controller="QandA" asp-action="Index"><i class="far fa-question-circle"></i> Fråga Oss</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Contact" asp-action="Index"><i class="far fa-comments"></i> Kontakt</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="About" asp-action="Index"><i class="far fa-question-circle"></i> Om oss</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>

    </header>
    <div class="container">

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <footer class="container border-top footer text-dark col-lg-12 col-md-auto col-sm-auto">

        &copy;rockstart.se @DateTime.Now.Year | <a asp-area="" asp-controller="Contact" asp-action="Index">Kontakta Oss </a>
        <a>| Adress: Liljeholmskajen 2 | 123 21 Stockholm | Tel: 08-12 34 52 | Email: info@rockstart.se</a>

    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/a59e8a19b5.js" crossorigin="anonymous"></script>


    @RenderSection("Scripts", required: false)
</body>



</html>

