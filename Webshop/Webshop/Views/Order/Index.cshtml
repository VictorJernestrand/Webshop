@model Webshop.Models.OrderViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h4>OrderViewModel</h4>

@if (TempData["Address Null"] != null)

{
    <div class="alert alert-warning" role="alert">
        @TempData["Address Null"] Klick <a asp-action="EditUser" asp-controller="User"> här</a> för Uppdatera
        
    </div>
}
<hr />

<table>
    <tr>
        <td colspan="2">Dina varor</td>
        <td></td>
    </tr>
    @foreach (var product in Model.Products)
    {
    <tr>
        <td><img src="@Url.Content("~/Image/" + @product.Photo)" style="height: 80px; width: auto" /></td>
        <td>@product.Name</td>
        <td>
            @if (product.Quantity == 0)
            {
            <span><i class="fas fa-exclamation-triangle" style="color: yellow"></i></span>
            }
            else
            {
               <span><i class="far fa-check-square" style="color: green"></i></span>
            }
        </td>
    </tr>
    }
</table>


